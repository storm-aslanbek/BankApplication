<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_bank"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_bank"
        android:supportsRtl="true"
        android:theme="@style/Theme.BankApplication"
        tools:targetApi="31" >
        <activity
            android:name=".activities.MessagesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FaqActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SupportActivity"
            android:exported="false" />
        <activity
            android:name=".activities.TransactionsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MyBankActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RegActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>